<Window x:Name="PomodoroBorderTimer" x:Class="PomodoroBorderTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PomodoroBorderTimer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350"  Width="525" BorderThickness="0" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="{x:Null}" ResizeMode="NoResize" Margin="0" Foreground="{x:Null}" Closing="PomodoroBorderTimer_Closing" AllowsTransparency="True" WindowStyle="None" Topmost="True" ShowInTaskbar="False" IsTabStop="False" TabIndex="0" IsHitTestVisible="False" Focusable="False">
    <Grid Margin="1">
        <Grid.ContextMenu>
            <ContextMenu Name="menu">
                <MenuItem Header="Restart Timer" Click="Restart_Timer_Click" />
                <Separator />
                <MenuItem Header="Close" Click="MenuItem_Click" />
            </ContextMenu>
        </Grid.ContextMenu>
        <Border Name="myBorder" Margin="1" BorderBrush="Red" BorderThickness="5,5,5,0" Opacity="0.7"/>
        <Grid.OpacityMask>
            <VisualBrush Visual="{Binding ElementName=myBorder}" />
        </Grid.OpacityMask>
    </Grid>
</Window>
